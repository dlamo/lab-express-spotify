<h1>Albums</h1>

<div class="container">

    <div class="row">

        {{#each albums}}

            <div class="card col-md-4 col-lg-3 text-center my-3 card-opacity" style="width: 18rem;">
                <img class="card-img-top" src={{images.0.url}} alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <a href="/tracks/{{id}}" class="btn btn-danger">View Tracks</a>
                </div>
            </div>

        {{/each}}

    </div>

</div>